<UserControl x:Class="AtlasApp.Map.MapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:map="clr-namespace:AtlasApp.Map"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800"
             d:DataContext="{d:DesignInstance map:MapViewModel}">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/MainMenuBackground.jpg"/>
        </Grid.Background>

        <Image Source="/Resources\atlasmap.png" 
               />

        <Ellipse Name="Marker1" Fill="Red" Margin="0,179,152,0" Width="10" Height="10"/>
    </Grid>
</UserControl>
